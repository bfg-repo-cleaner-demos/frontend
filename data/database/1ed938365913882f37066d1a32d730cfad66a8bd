      "id":"money/2013/oct/16/barclays-bank-tops-customer-complaints-lloyds",
      "sectionId":"money",
      "sectionName":"Money",
      "webPublicationDate":"2013-10-16T11:25:02Z",
      "webTitle":"Barclays bank tops list of customer complaints",
      "webUrl":"http://www.theguardian.com/money/2013/oct/16/barclays-bank-tops-customer-complaints-lloyds",
