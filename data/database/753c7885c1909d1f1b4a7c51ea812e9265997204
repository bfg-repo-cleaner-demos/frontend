      "id":"commentisfree/2013/oct/17/snowden-dossier-surveillance-press-regulation",
      "sectionId":"commentisfree",
      "sectionName":"Comment is free",
      "webPublicationDate":"2013-10-17T22:18:33Z",
      "webTitle":"The Snowden dossier: balancing acts | Editorial",
      "webUrl":"http://www.theguardian.com/commentisfree/2013/oct/17/snowden-dossier-surveillance-press-regulation",
      "apiUrl":"http://content.guardianapis.com/commentisfree/2013/oct/17/snowden-dossier-surveillance-press-regulation",
