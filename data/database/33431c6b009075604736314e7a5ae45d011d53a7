      "id":"business/2013/oct/28/g4s-rejects-charterhouse-offer-cash-transportation-arm",
      "sectionId":"business",
      "sectionName":"Business",
      "webPublicationDate":"2013-10-28T13:21:00Z",
      "webTitle":"G4S rejects £1.55bn Charterhouse offer for cash solutions business",
      "webUrl":"http://www.theguardian.com/business/2013/oct/28/g4s-rejects-charterhouse-offer-cash-transportation-arm",
      "apiUrl":"http://content.guardianapis.com/business/2013/oct/28/g4s-rejects-charterhouse-offer-cash-transportation-arm",
